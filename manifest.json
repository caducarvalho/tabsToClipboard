{
  "manifest_version": 3,
  "name": "Tabs to Clipboard",
  "version": "1.0",

  "description": "Adds a browser action icon that joins every active tab URL into a single string and copy to clipboard.",
  "homepage_url": "https://github.com/caducarvalho/tabsToClipboard",
  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-48.svg"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "clipboardWrite"
  ],

  "action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon-16-light.svg",
      "32": "icons/icon-32-light.svg"
    },
    "default_title": "Tabs to Clipboard",
    "default_popup": "popup/choose_style.html",
    "theme_icons": [{
      "light": "icons/icon-16-dark.svg",
      "dark": "icons/icon-16-light.svg",
      "size": 16
    }, {
      "light": "icons/icon-32-dark.svg",
      "dark": "icons/icon-32-light.svg",
      "size": 32
    }]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "8cc3896e-60ce-4b62-8197-01aab7291ad0"
    }
  }
}